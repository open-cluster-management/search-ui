{
    "name": "@open-cluster-management/search-ui-backend",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "build": "npm run clean && tsc --sourceMap false --declaration false",
        "clean": "rm -rf coverage build",
        "test": "jest --verbose",
        "test:update": "npm test -- -u",
        "lint": "eslint src test --ext .ts --max-warnings=0",
        "lint:fix": "eslint src test --ext .ts --fix",
        "check": "prettier --check src/*.ts src/**/*.ts !coverage/** !build/** !**/package-lock.json",
        "check:fix": "prettier --write src/*.ts src/**/*.ts !coverage/** !build/** !**/package-lock.json",
        "start": "PORT=4000 NODE_ENV=development LOG_LEVEL=trace ts-node-dev --no-notify --no-deps --respawn --transpile-only src/main.ts | pino-zen --ignore instance,time",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u && npm install && npm audit fix && npm dedup && npm test && npm run lint && npm run check",
        "generate-certs": "mkdir -p certs && openssl req -subj '/C=US' -new -newkey rsa:2048 -sha256 -days 365 -nodes -x509 -keyout certs/tls.key -out certs/tls.crt"
    },
    "dependencies": {
        "@kubernetes/client-node": "^0.13.2",
        "@types/yamljs": "^0.2.31",
        "axios": "^0.21.1",
        "dotenv": "^8.2.0",
        "fastify": "^3.14.0",
        "fastify-compress": "^3.4.2",
        "fastify-cookie": "^5.2.0",
        "fastify-cors": "^5.2.0",
        "fastify-csrf": "^3.0.1",
        "fastify-etag": "^2.1.0",
        "fastify-helmet": "^5.3.0",
        "fastify-http-proxy": "^4.4.0",
        "fastify-https-redirect": "^1.0.3",
        "fastify-oauth2": "^4.2.1",
        "fastify-reply-from": "^4.0.2",
        "fastify-static": "^3.4.0",
        "pino": "^6.11.2",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/eslint": "^7.2.7",
        "@types/eslint-config-prettier": "^6.11.0",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.35",
        "@types/pino": "^6.3.6",
        "@types/prettier": "^2.2.3",
        "@typescript-eslint/eslint-plugin": "^4.18.0",
        "@typescript-eslint/parser": "^4.18.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^5.1.3",
        "jest": "^26.6.3",
        "jest-sonar-reporter": "^2.0.0",
        "nock": "^13.0.11",
        "pino-zen": "^1.0.20",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.3",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.6",
        "typescript": "^4.2.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run check",
            "pre-push": "npm run test"
        }
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module",
            "project": [
                "./tsconfig.eslint.json"
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-use-before-define": "off",
            "@typescript-eslint/no-unused-vars": "off",
            "@typescript-eslint/no-floating-promises": [
                "error",
                {
                    "ignoreVoid": true
                }
            ],
            "no-console": "error",
            "no-process-exit": "error"
        }
    }
}
